<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 https://maven.apache.org/xsd/assembly-2.2.0.xsd">
    <!--后缀-->
    <id>service</id>
    <!--打包压缩文件格式-->
    <formats>
        <format>tar.gz</format>
    </formats>
    <!--是否生成基础目录-->
    <includeBaseDirectory>false</includeBaseDirectory>

    <!--输出依赖到lib目录-->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <!--是否生成项目的jar-->
            <useProjectArtifact>false</useProjectArtifact>
            <scope>runtime</scope>
            <unpack>false</unpack>
            <fileMode>0540</fileMode>
            <directoryMode>0750</directoryMode>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!--手动打包项目jar至lib目录-->
        <fileSet>
            <directory>${project.parent.basedir}/service-core/target</directory>
            <outputDirectory>/lib</outputDirectory>
            <!--filtering标签 true:表示开启变量替换；false：表示关闭变量替换；非文本文件应该设置为false-->
            <filtered>false</filtered>
            <fileMode>0540</fileMode>
            <directoryMode>0750</directoryMode>
            <includes>
                <include>${app.jar.name}.jar</include>
            </includes>
        </fileSet>
        <!--打包项目bin脚本-->
        <fileSet>
            <directory>${project.parent.basedir}/deployment/release/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>0540</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
        <!--生成项目日志文件夹-->
        <fileSet>
            <directory/>
            <outputDirectory>/logs</outputDirectory>
            <excludes>
                <exclude>/**/*</exclude>
            </excludes>
            <fileMode>640</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/deployment/release/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0440</fileMode>
            <directoryMode>0750</directoryMode>
            <includes>
                <include>https.keystore</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/deployment/release/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0440</fileMode>
            <directoryMode>0750</directoryMode>
            <includes>
                <include>application-custom.properties</include>
            </includes>
        </fileSet>
        <!--打包项目配置文件至外部classpath-->
        <fileSet>
            <directory>${project.parent.basedir}/service-core/src/main/resources</directory>
            <outputDirectory>/conf</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>bootstrap.properties</include>
                <include>application.properties</include>
                <include>logback-spring.xml</include>
                <include>mybatis/mapper/**/*Mapper.xml</include>
                <include>mybatis/mybatis-config.xml</include>
            </includes>
            <fileMode>0440</fileMode>
            <directoryMode>0750</directoryMode>
        </fileSet>
        <!--打包db升级脚本至外部classpath-->
        <fileSet>
            <directory>${project.parent.basedir}/deployment/release/db</directory>
            <outputDirectory>/conf/db-migration</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0440</fileMode>
            <directoryMode>0750</directoryMode>
            <includes>
                <include>**/*.sql</include>
                <include>**/*.json</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>