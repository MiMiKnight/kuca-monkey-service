<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://kuca.mimiknight.cn/xml/schema/error-code"
               xsi:schemaLocation="https://kuca.mimiknight.cn/xml/schema/error-code error-code-config-1.0.xsd">

    <types>
        <type id="type01" status="200">OK</type>
        <type id="type02" status="500">System Exception</type>
        <type id="type03" status="404">Resource Not Found</type>
        <type id="type04" status="500">Business Exception</type>
        <type id="type05" status="500">Database Exception</type>
        <type id="type06" status="400">Param Valid Exception</type>
    </types>

    <modules>
        <!--system-->
        <module id="system">
            <!--默认OK响应错误码-->
            <error id="000000" type="type01">Ok response</error>
            <!--默认Bad响应错误码-->
            <error id="999999" type="type02">Bad response</error>
            <error id="999998" type="type03">The api path not found</error>
            <error id="999997" type="type02">Null point</error>
            <error id="999996" type="type04">Http Message Not Readable</error>
            <error id="999995" type="type04">Media Type Not Supported</error>
            <error id="999994" type="type04">The SQL syntax error</error>
        </module>
        <!--biz-->
        <module id="biz">
            <error id="110000" type="type01">user password invalid</error>
            <error id="110001" type="type01">user not exist</error>
        </module>
    </modules>

</configuration>